{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "type/**/*",
    "./*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}